<resources>

    <!-- Themes -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/md_white_1000</item>
    </style>

    <style name="TransparentStatusBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#33000000</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <!-- Splash Screen -->

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <!-- Bottom Sheet Dialog -->

    <style name="TransparentBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


    <!-- Bottom App Bar -->

    <style name="DarkBottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:color">@color/md_white_1000</item>
    </style>


    <!-- TextView -->

    <style name="MenuItem.TextView.Default" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/ripple_light_mode_default</item>
    </style>


    <!-- Text Input Layout -->

    <style name="Cursor.Default" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/md_white_1000</item>
    </style>

    <style name="TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/md_white_1000_20</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="hintTextColor">@color/md_white_1000_20</item>
        <item name="boxStrokeColor">@color/md_white_1000</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="android:theme">@style/Cursor.Default</item>
    </style>


    <!-- Dialog -->

    <style name="NegativeButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="backgroundTint">@color/md_white_1000</item>
    </style>

    <style name="PositiveButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="backgroundTint">@color/md_white_1000</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:windowBackground">@drawable/card_default</item>
        <item name="android:textColorPrimary">@color/md_black_1000</item>
        <item name="textColorAlertDialogListItem">@color/md_black_1000</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonTheme</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonTheme</item>
    </style>

</resources>
